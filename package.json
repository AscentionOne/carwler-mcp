{
  "name": "web-crawler-mcp",
  "version": "1.0.0",
  "description": "Simple web scraper using Crawl4AI for Claude usage",
  "main": "dist/index.js",
  "bin": {
    "web-crawler-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "mcp": "npm run build && node dist/mcp-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:manual": "node tests/manual/mcp-interactive-test.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "crawl": "npm run dev"
  },
  "keywords": [
    "web-scraping",
    "crawl4ai",
    "markdown",
    "claude",
    "documentation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "zod": "^3.25.76"
  }
}
